{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "tsBuildInfoFile": "./tsconfig.types.tsbuildinfo"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "references": [
    {
      "path": "../errors/tsconfig.types.json"
    }
  ]
}
