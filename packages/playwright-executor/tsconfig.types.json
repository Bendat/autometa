{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declarationDir": "./dist",
    "tsBuildInfoFile": "./tsconfig.types.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/__tests__/**"
  ],
  "references": [
    {
      "path": "../config/tsconfig.types.json"
    },
    {
      "path": "../executor/tsconfig.types.json"
    },
    {
      "path": "../scopes/tsconfig.types.json"
    },
    {
      "path": "../test-builder/tsconfig.types.json"
    }
  ]
}
