{
  "name": "@autometa/scopes",
  "version": "0.1.10",
  "description": "Test Scopes and Groups for @Autometa",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "vitest run",
    "test:types": "vitest typecheck",
    "test:watch": "vitest",
    "prettify": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "clean": "rimraf dist",
    "build": "tsup",
    "build:watch": "tsup --watch"
  },
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/index.js",
    "default": "./dist/esm/index.js",
    "types": "./dist/index.d.ts"
  },
  "author": "Ben Aherne",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber-expressions": "^16.1.2",
    "@types/diff": "^5.0.3",
    "@types/glob": "^8.0.1",
    "@types/node": "^18.11.18",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.37.0",
    "eslint-config-custom": "workspace:*",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.8.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "strip-color": "^0.1.0",
    "tsconfig": "workspace: *",
    "tsup": "^7.2.0",
    "typescript": "^4.9.5",
    "vitest": "0.33.0"
  },
  "dependencies": {
    "@autometa/app": "workspace:*",
    "@autometa/bind-decorator": "workspace:*",
    "@autometa/dto-builder": "workspace:*",
    "@autometa/errors": "workspace:^",
    "@autometa/events": "workspace:*",
    "@autometa/gherkin": "workspace:*",
    "@autometa/overloaded": "workspace:*",
    "@autometa/phrases": "workspace:^",
    "@autometa/types": "workspace:*",
    "@cucumber/gherkin": "^26.0.3",
    "@cucumber/messages": "^21.0.1",
    "@cucumber/tag-expressions": "^5.0.1",
    "chalk": "^5.3.0",
    "closest-match": "^1.3.3",
    "colors-cli": "^1.0.32",
    "diff": "^5.1.0",
    "get-caller-file": "^2.0.5",
    "glob": "^8.1.0",
    "uuid": "^9.0.0"
  }
}
