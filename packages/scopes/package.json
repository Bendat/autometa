{
  "name": "@autometa/scopes",
  "version": "0.1.6",
  "description": "Test Scopes and Groups for @Autometa",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "prettify": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "build:js": "tsup",
    "build:dts:tsc": "tsc --build --clean && tsc && tsup --entry.index out/src/index.d.ts --dtsOnly",
    "build:dts": "pnpm build:dts:tsc",
    "build": "pnpm build:js && pnpm build:dts ",
    "build:watch": "tsup --watch"
  },
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/index.js",
    "default": "./dist/esm/index.js",
    "types": "./dist/index.d.ts"
  },
  "author": "Ben Aherne",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber-expressions": "^16.1.2",
    "@types/glob": "^8.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "dts-bundle-generator": "^8.0.1",
    "eslint": "^8.37.0",
    "eslint-config-custom": "workspace:*",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.8.3",
    "reflect-metadata": "^0.1.13",
    "tsconfig": "workspace: *",
    "tsup": "^6.7.0",
    "typescript": "^4.9.5",
    "vitest": "^0.31.1"
  },
  "dependencies": {
    "@autometa/app": "workspace:^",
    "@autometa/bind-decorator": "workspace:*",
    "@autometa/dto-builder": "workspace:*",
    "@autometa/errors": "workspace:^",
    "@autometa/events": "workspace:*",
    "@autometa/gherkin": "workspace:*",
    "@autometa/overloaded": "workspace:*",
    "@autometa/types": "workspace:*",
    "@cucumber/gherkin": "^26.0.3",
    "@cucumber/tag-expressions": "^5.0.1",
    "closest-match": "^1.3.3",
    "get-caller-file": "^2.0.5",
    "glob": "^8.1.0"
  }
}
