{
  "name": "@autometa/types",
  "version": "0.3.0",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "description": "Common types and type utilities for Autometa",
  "scripts": {
    "prettify": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "build:js": "tsup",
    "build:dts:tsc": "rimraf out && tsc --declarationDir out --declaration --emitDeclarationOnly",
    "build:dts:tsup": "tsup --entry.index out/src/index.d.ts --dtsOnly",
    "build:dts": "pnpm build:dts:tsc && pnpm build:dts:tsup",
    "build": "pnpm build:dts && pnpm build:js",
    "build:watch": "tsup --watch"
  },
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/index.js",
    "default": "./dist/esm/index.js",
    "types": "./dist/index.d.ts"
  },
  "author": "Ben Aherne",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber-expressions": "^16.1.2",
    "@types/node": "^18.11.18",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint-config-custom": "workspace: *",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.3.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "tsup": "^6.7.0",
    "typescript": "^4.9.5",
    "tsconfig": "workspace:*"
  }
}
