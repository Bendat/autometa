{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../configuration/tsconfig/package.build.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["node"],
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
