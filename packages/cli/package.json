{
  "name": "@autometa/cli",
  "version": "1.0.0-rc.5",
  "description": "Command-line runner for Autometa features",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "autometa": "dist/bin.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "type-check": "tsc --noEmit -p tsconfig.dev.json",
    "type-check:watch": "tsc --noEmit --watch -p tsconfig.dev.json",
    "build": "tsup && pnpm run build:types",
    "build:types": "rimraf tsconfig.types.tsbuildinfo && tsc --build tsconfig.types.json",
    "build:watch": "tsup --watch",
    "dev": "tsup --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --passWithNoTests",
    "test:ui": "vitest --ui --passWithNoTests",
    "coverage": "vitest run --coverage --passWithNoTests",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "prettify": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "clean": "rimraf dist"
  },
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs",
    "default": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "license": "MIT",
  "dependencies": {
    "@autometa/config": "workspace:*",
    "@autometa/coordinator": "workspace:*",
    "@autometa/executor": "workspace:*",
    "@autometa/gherkin": "workspace:*",
    "@autometa/http": "workspace:*",
    "@autometa/runner": "workspace:*",
    "@autometa/scopes": "workspace:*",
    "@autometa/test-builder": "workspace:*",
    "@autometa/errors": "workspace:*",
    "@babel/code-frame": "^7.23.5",
    "commander": "^11.1.0",
    "esbuild": "^0.18.20",
    "fast-glob": "^3.3.2",
    "picocolors": "^1.1.1",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/babel__code-frame": "^7.0.8",
    "@types/node": "^18.11.18",
    "@types/source-map-support": "^0.5.10",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.37.0",
    "eslint-config-custom": "workspace:*",
    "eslint-config-prettier": "^8.3.0",
    "picocolors": "^1.1.1",
    "rimraf": "^4.1.2",
    "source-map-support": "^0.5.21",
    "tsconfig": "workspace:*",
    "tsup": "^7.2.0",
    "tsup-config": "workspace:*",
    "typescript": "^4.9.5",
    "vitest": "1.4.0"
  }
}
