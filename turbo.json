{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["env", "CUCUMBER_FILTER_TAGS"],
  "pipeline": {
    "build": {
      "inputs": ["**/*.ts"],
      "outputs": ["dist/**"]
    },
    "build:docs": {},
    "build:runner":{
      "inputs": ["**/*/cucumber-runner/**/*.ts"]
    },
    "integrate": {},
    "clean": {
      "inputs": ["dist/**"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "inputs": ["**/*.ts"]
    },
    "lint:fix": {
      "inputs": ["**/*.ts"]
    },
    "dev": {
      "cache": false
    }
  }
}
