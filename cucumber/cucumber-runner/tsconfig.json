{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@gherkin/*": ["src/gherkin/*"],
      "@gherkin": ["src/gherkin"],
      "@scopes/*": ["src/test-scopes/*"],
      "@scopes": ["src/test-scopes"],
      "@typing/*": ["src/type-extensions/*"],
      "@typing": ["src/type-extensions/index.ts"],
      "@fs/*": ["src/filesystem/*"],
      "@fs": ["src/filesystem"],
      "@config/*": ["src/config/*"],
      "@config": ["src/config"]
    }
  },
  "files": ["src/index.ts"]
}
