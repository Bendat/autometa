{
  "name": "@autometa/cucumber-runner",
  "version": "0.7.3",
  "description": "Run cucumber with jest or vitest, with superpowers",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bendat/autometa"
  },
  "bin": {
    "cucumber-runner": "dist/cjs/src/cli.js"
  },
  "scripts": {
    "test": "jest --passWithNoTests ",
    "prettify": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "postbuild": "tsc-alias -p ./tsconfig.cjs.json && tsc-alias -p ./tsconfig.json",
    "build:libs": "tsc -p tsconfig.json && tsc -p tsconfig.cjs.json && ./fixup",
    "build:code": "rimraf dist/ && pnpm run build:libs",
    "build": "pnpm build:code && pnpm postbuild",
    "build:mjs": "rimraf dist/ && tsc -p tsconfig.json && ./fixup",
    "build:cjs": "rimraf dist/ && tsc -p tsconfig.cjs.json && ./fixup"
  },
  "keywords": [
    "cucumber",
    "test runner",
    "vitest cucumber",
    "jest cucumber",
    "cucumber runner",
    "dependency injection"
  ],
  "homepage": "http://github.com/bendat/autometa",
  "author": "Ben Aherne",
  "license": "ISC",
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.js",
    "default": "./dist/esm/index.js",
    "types": "./dist/types/index.d.ts"
  },
  "devDependencies": {
    "@jest/globals": "^29.4.3",
    "@jest/types": "^29.4.3",
    "@types/glob": "^8.0.1",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.18",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^7.23.0",
    "eslint-config-custom": "workspace:*",
    "node": "^19.6.0",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.2",
    "typescript": "^4.9.5",
    "vite-tsconfig-paths": "^4.0.5",
    "tsyringe": "^4.7.0",
    "vitest": "^0.27.3",
    "jest": "^29.4.3"
  },
  "dependencies": {
    "@autometa/dto-builder": "workspace:*",
    "@cucumber/cucumber": "^9.0.0",
    "@cucumber/cucumber-expressions": "^16.1.2",
    "@cucumber/gherkin": "^26.0.3",
    "@cucumber/messages": "^21.0.1",
    "@cucumber/tag-expressions": "^5.0.1",
    "@types/convert-array-to-csv": "^2.0.0",
    "allure-js-commons": "^2.1.0",
    "cd": "^0.3.3",
    "color-json": "^3.0.5",
    "commander": "^10.0.0",
    "convert-array-to-csv": "^2.0.0",
    "get-caller-file": "^2.0.5",
    "glob": "^8.1.0",
    "joi": "^17.8.3",
    "json-colorizer": "^2.2.2",
    "lodash": "^4.17.21",
    "myzod": "^1.10.0",
    "reflect-metadata": "^0.1.13",
    "uuid": "^9.0.0"
  }
}
