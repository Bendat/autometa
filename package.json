{
  "name": "autometa",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "changesets": "changesets",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "node scripts/update-ts-references.mjs",
    "sync-ts-references": "node scripts/update-ts-references.mjs",
    "type-check": "turbo run type-check",
    "type-check:watch": "turbo run type-check --watch",
    "coverage": "turbo run coverage",
    "build": "turbo run build",
    "build:docs": "turbo run build:docs",
    "dev": "turbo run dev",
    "test": "turbo run test --filter='!@autometa/documentation'",
    "test:types": "turbo run test:types --filter='!@autometa/documentation'",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "clean": "turbo run clean",
    "prettify": "prettier **/*.{ts,tsx,md} --write",
    "turbo:update": "npx @turbo/codemod migrate",
    "turbo:gen": "turbo gen library && pnpm i && pnpm sync-ts-references",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepublish": "pnpm run build",
    "release": "pnpm run build && changeset publish",
    "release:prepare": "pnpm changeset version",
    "local:unpublish": "pnpm unpublish --registry http://localhost:4873/ --force",
    "local:publish": "pnpm publish --registry http://localhost:4873/ --force",
    "update:references": "node scripts/update-ts-references.mjs",
    "verify:packages": "turbo run verify:packages"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@turbo/gen": "^2.5.5",
    "@types/lodash": "^4.14.195",
    "@vitest/coverage-v8": "^1.4.0",
    "eslint-config-custom": "workspace:*",
    "glob": "^11.0.3",
    "lodash": "^4.17.21",
    "prettier": "^2.8.3",
    "turbo": "^2.5.5",
    "typescript": "4.9.5",
    "vitest": "1.4.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@9.12.3",
  "volta": {
    "node": "16.20.0"
  },
  "dependencies": {
    "@vitest/coverage-istanbul": "^1.4.0"
  }
}
