{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../configuration/tsconfig/package.config.json",
  "compilerOptions": {
    "outDir": "./dist",
    "types": ["node", "vitest"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "lib": ["ES2022"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
