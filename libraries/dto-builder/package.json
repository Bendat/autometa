{
  "name": "@autometa/dto-builder",
  "version": "0.6.0",
  "description": "Define DTOs and Entities and automatically create a builder class.",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "test": "vitest run --passWithNoTests",
    "prettify": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "postbuild": "tsc-alias -p ./tsconfig.cjs.json && tsc-alias -p ./tsconfig.json",
    "build:libs": "tsc -p tsconfig.json && tsc -p tsconfig.cjs.json",
    "build:code": "rimraf dist/ && pnpm run build:libs && ./fixup",
    "build": "pnpm build:code && pnpm postbuild"
  },
  "keywords": [
    "dto",
    "builder",
    "builder-pattern",
    "builder pattern",
    "dto-builder",
    "entity builder",
    "entity-builder"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Bendat/autometa"
  },
  "homepage": "http://github.com/bendat/autometa",
  "author": "Ben Aherne",
  "license": "ISC",
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.js",
    "default": "./dist/esm/index.js",
    "types": "./dist/types/index.d.ts"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "class-validator": "^0.14.0",
    "eslint": "^7.32.0",
    "eslint-config-custom": "workspace:*",
    "node": "^19.6.0",
    "prettier": "^2.8.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.2",
    "typescript": "^4.9.5",
    "vitest": "^0.28.5"
  }
}
